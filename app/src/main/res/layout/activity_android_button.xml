<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnSimpleButtom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#25aaff"
            android:onClick="callSimpleButton"
            android:padding="10dp"
            android:text="This is Simple Android Button" />

        <Button
            android:id="@+id/btnIcLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#25aaff"
            android:drawableLeft="@drawable/ic_phone"
            android:onClick="callLeftIconButton"
            android:padding="10dp"
            android:text="Button With Icon in Left" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#25aaff"
            android:drawableRight="@drawable/ic_phone"
            android:onClick="callRightIconButton"
            android:padding="10dp"
            android:text="Button With Icon in Right" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="299dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_but"
            android:onClick="callBackgroundImageButton"
            android:padding="10dp"
            android:text="Button With Background Image" />

        <androidx.appcompat.widget.AppCompatToggleButton
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@drawable/button_border"
            android:onClick="callBorderButton"
            android:padding="10dp"
            android:text="Button With Border Color" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_radius"
            android:onClick="callBorderRadiusButton"
            android:padding="10dp"
            android:text="Button With Border Radius" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_button"
            android:onClick="callRoundButton"
            android:padding="10dp"
            android:text="Round Button" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:onClick="callMaterialDesignButton"
            android:textSize="18sp"
            android:text="Material Design Button "  />

    </LinearLayout>
</ScrollView>
